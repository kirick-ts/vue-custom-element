{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"moduleDetection": "force",
		"isolatedModules": true,
		"verbatimModuleSyntax": true,
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,
		"module": "preserve",
		"noEmit": true,
		"lib": [
			"es2022",
			"dom",
			"dom.iterable"
		],
		"declaration": true,
		"isolatedDeclarations": true
	},
	"include": [
		"src/"
	],
	"exclude": [
		"dist/",
		"node_modules/",
		"test/",
		"**/*.test.*"
	]
}
